        <TextBox x:Name="TitleBox" HorizontalAlignment="Left" Height="44.247" Margin="602.532,124.984,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="140.8" RenderTransformOrigin="0.5,0.5"/>
