        <Rectangle Fill="#FF21313A" Height="673.8" Stroke="Black" Width="1280" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="-8,0,0,0"/>
        <Rectangle x:Name="rectangle" Height="552.813" Stroke="White" Width="438.752" RadiusX="10" RadiusY="10" Margin="423.2,96.987,0,0" HorizontalAlignment="Left" VerticalAlignment="Top">
