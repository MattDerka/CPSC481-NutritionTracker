        <TextBlock HorizontalAlignment="Left" Height="96.05" Margin="0,48.4,0,0" TextWrapping="Wrap" Text="Settings" VerticalAlignment="Top" Width="1270" FontSize="48" TextAlignment="Center" Foreground="White" FontWeight="Bold"/>

