        <Button x:Name="TypeButton" Content="Type Recipe" HorizontalAlignment="Left" VerticalAlignment="Top" Width="221.243" Cursor="Hand" Height="64.014" FontSize="20" Background="#FF4CDA73" Foreground="White" BorderBrush="{x:Null}" Margin="385.6,334.986,0,0"/>
